import random
import string

# Ask user for password length
length = int(input("Enter the desired password length: "))

# Ask user about complexity
print("\nSelect password complexity:")
print("1. Only Letters")
print("2. Letters + Numbers")
print("3. Letters + Numbers + Special Characters")

choice = input("Enter your choice (1/2/3): ")

# Define character sets
letters = string.ascii_letters      # a-z + A-Z
digits = string.digits             # 0-9
symbols = string.punctuation       # !@#$%^&*()...

if choice == '1':
    characters = letters
elif choice == '2':
    characters = letters + digits
elif choice == '3':
    characters = letters + digits + symbols
else:
    print("Invalid choice! Defaulting to Letters + Numbers + Special Characters.")
    characters = letters + digits + symbols

# Generate password using random.choice
password = ''.join(random.choice(characters) for _ in range(length))

# Display generated password
print(f"\nGenerated Password: {password}")
